@model RoleManagmentVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Quản lý Role</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ApplicationUser.Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        @* <div asp-validation-summary="ModelOnly"></div> *@
                        <div class="form-floating py-2 col-12">
                            <label class="ms-2">Tài khoản</label>
                            <input asp-for="ApplicationUser.Name" class="form-control border-0 shadow" autofocus />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-control">
                            </select>
                        </div>
                        @{
                            var companyVisible = "display:none;";
                        }
                        @if(Model.ApplicationUser.Role == SD.Role_Company)
                        {
                            companyVisible = "display:block;";
                        }
                        <div class="form-floating py-2 col-12">
                            <select asp-for="ApplicationUser.CompanyId" style="@companyVisible" asp-items="@Model.CompanyList" class="form-control">
                            </select>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Cập nhật</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-action="Index" class="btn btn-outline-primary border form-control">Quay lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('#ApplicationUser_Role').change(function () {
                var selectRole = $('#ApplicationUser_Role Option:Selected').text();
                if (selectRole == 'Company') {
                    $('#ApplicationUser_CompanyId').show();
                }
                else {
                    $('#ApplicationUser_CompanyId').hide();
                }
            })
        })
    </script>
}
