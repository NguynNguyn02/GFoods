@model ProductVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id != 0 ? "Cập nhật" : "Tạo") Sản phẩm</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.Title" class="ms-2"></label>
                            <input asp-for="Product.Title" class="form-control border-0 shadow" autofocus />
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.Description" class="ms-2"></label>
                            <input asp-for="Product.Description" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Description" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.ProductCode" class="ms-2"></label>
                            <input asp-for="Product.ProductCode" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.ProductCode" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.Detail" class="ms-2"></label>
                            <textarea asp-for="Product.Detail" class="form-control border-0 shadow"></textarea>
                            <span asp-validation-for="Product.Detail" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.Quantity" class="ms-2"></label>
                            <input asp-for="Product.Quantity" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.OriginalPrice" class="ms-2"></label>
                            <input asp-for="Product.OriginalPrice" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.OriginalPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.Price" class="ms-2"></label>
                            <input asp-for="Product.Price" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.PriceSale" class="ms-2"></label>
                            <input asp-for="Product.PriceSale" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.PriceSale" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.CategoryProductId" class="ms-2"></label>
                            <select asp-for="@Model.Product.CategoryProductId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <span asp-validation-for="Product.CategoryProductId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.ProductImages" class="ms-2"></label>
                            <input type="file" name="files" class="form-control border-0 shadow" multiple />
                        </div>

                        <div class="row ml-5">

                            <div class="form-floating custom-checkbox py-2 col-2">
                                <input type="checkbox" asp-for="Product.IsHome" class="custom-control-input border-0 shadow" />
                                <label asp-for="Product.IsHome" class="custom-control-label"></label>
                            </div>
                            <div class="form-floating custom-checkbox py-2 col-2">
                                <input type="checkbox" asp-for="Product.IsSale" class="custom-control-input border-0 shadow" />
                                <label asp-for="Product.IsSale" class="custom-control-label"></label>
                            </div>

                            <div class="form-floating custom-checkbox py-2 col-2">
                                <input type="checkbox" asp-for="Product.IsHot" class="custom-control-input border-0 shadow" />
                                <label asp-for="Product.IsHot" class="custom-control-label"></label>
                            </div>

                            <div class="form-floating custom-checkbox py-2 col-3">
                                <input type="checkbox" asp-for="Product.IsFeature" class="custom-control-input" />
                                <label asp-for="Product.IsFeature" class="custom-control-label"></label>
                            </div>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.SeoTitle" class="ms-2"></label>
                            <input asp-for="Product.SeoTitle" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.SeoTitle" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.SeoDescription" class="ms-2"></label>
                            <input asp-for="Product.SeoDescription" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.SeoDescription" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Product.SeoKeywords" class="ms-2"></label>
                            <input asp-for="Product.SeoKeywords" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.SeoKeywords" class="text-danger"></span>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Cập nhật</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Tạo</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Quay lại</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    @if (Model.Product.ProductImages != null)
                    {
                        @foreach (var image in Model.Product.ProductImages)
                        {
                            <img src="@image.ImageUrl" width="100%"
                                 style="border-radius:5px; border:1px solid #bbb9b9" />
                                 <a asp-action="DeleteImage" class="btn btn-danger" asp-route-imageId="@image.Id">
                                     <i class="bt bi-trash-fill"></i> Xóa
                                 </a>
                        }


                    }

                    
                </div>
            </div>

        </form>
    </div>
</div>
@section Scripts {


    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
